#ifndef LCF_RPG_{{ struct_name|upper }}_H
#define LCF_RPG_{{ struct_name|upper }}_H

#include <lcf/rpg/reflect.h>
{%- for header in headers[struct_name] %}
{%- if loop.first %}

// Headers
{%- endif %}
#include {{ header }}
